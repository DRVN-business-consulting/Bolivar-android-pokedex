<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/ivPokemon"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:contentDescription="Pokemon"
                android:padding="15dp"
                tools:src="@drawable/charmander" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPokemon"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:gravity="bottom"
                    android:textSize="20sp"
                    tools:text="My Pokemon"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPokemonType"
                        android:layout_width="38dp"
                        android:layout_height="match_parent"
                        android:contentDescription="PokemonType"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        tools:src="@drawable/firetype" />

                    <TextView
                        android:id="@+id/tvPokemonType"
                        android:layout_width="189dp"
                        android:layout_height="57dp"
                        android:gravity="left|center"
                        android:textSize="12sp"
                        tools:ignore="RtlCompat"
                        tools:text="Pokemon Type" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>




